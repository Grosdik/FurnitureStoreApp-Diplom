<Page x:Class="FurnitureStoreApp.Views.AddEditPage.AddEditSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStoreApp.Views.AddEditPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSupplierPage" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Назввание компании"/>
            <TextBox Text="{Binding Company}" Grid.Column="1" HorizontalAlignment="Left"/>
            <TextBlock Text="Номер телефона" Grid.Row="1"/>
            <TextBox Text="{Binding Phone}" Grid.Column="1" HorizontalAlignment="Left"/>
            <Button Grid.Column="1" Grid.Row="6" Name="btnSave" Content="Сохранить" VerticalAlignment="Center" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Page>
