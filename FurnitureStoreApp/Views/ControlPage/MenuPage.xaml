<Page x:Class="FurnitureStoreApp.Views.ControlPage.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStoreApp.Views.ControlPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Товары" Name="goProductPage" Click="goProductPage_Click"/>
            <Button Content="Поставщики" Name="goSupplierPage" Click="goSupplierPage_Click"/>
            <Button Content="Типы мебели" Name="goTypeFurPage" Click="goTypeFurPage_Click"/>
        </StackPanel>
    </Grid>
</Page>
